<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoAnimation">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="NoActionBarAndAnim" parent="AppTheme.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>


    <!-- Text -->
    <style name="TextContent" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContent.Bold">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextContent.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextContent.Standard">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- Button -->
    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
